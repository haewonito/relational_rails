<%= form_with url: "/hikers/#{@hiker.id}/edit", method: :patch, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :phone_num %>
  <%= form.text_field :phone_num %>
  <%= form.label :on_mountain %>
  <%= form.text_field :on_mountain %>
  <%= form.submit 'Update Hiker' %>
<% end %>
